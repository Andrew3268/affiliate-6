/*blog_03*/
.blog_body{}
.blogs .blog_body .blog_tit h2{text-align:center;}
.blogs .blog_body .blog_tit h2 .backtoshool_title{color:#ff4d4d;text-align:center;}
.blog_body .school_box{border:2px solid #ccc;margin-bottom:50px;padding:15px;}
.blog_body .box_top{margin-top:35px;}
.blog_body .school_box .left_side{float:left;width:30%;font-family: 'Anton', sans-serif;}
.blog_body .school_box .left_side a{background:#000;color:#fff;padding:30px 30px;display:block;text-decoration:none;text-align:center;font-size:30px;font-weight:bold;}
.blog_body .school_box .left_side .bts_fontsize_hann{padding:10px;font-size:26px;}
.blog_body .school_box .left_side img{width:100%;}
.blog_body .school_box .right_side{float:left;width:65%;margin-left:3%;}
.blog_body .school_box .right_side h2{}
.blog_body .school_box .right_side h2 a{color:#000;}
.blog_body .school_box .right_side ul{margin:15px 0;}
.blog_body .school_box .right_side ul h3{text-decoration:none;color:#000;}
.blog_body .school_box .right_side ul li{list-style:disc;margin-left:25px;}
.blog_body .school_box .right_side ul li a{text-decoration:none;color:#08f;}
.blog_body .school_box .right_side ul li span{margin-left:10px;font-size:13px;}
.blog_body .school_box .right_side ul li span em{margin-left:7px;text-decoration:line-through;color:#616161;}
.blog_body .school_box .right_side .btn{margin-top:30px;}
.blog_body .school_box .right_side .btn a{text-decoration:none;background:#000;padding:10px 20px;border-radius:10px;color:#fff;}

@media screen and (max-width:640px){
  .blog_body .school_box .left_side{float:none;width:100%;margin-bottom:15px;}
  .blog_body .school_box .right_side{float:none;width:100%;margin:0%;}
}
@media screen and (min-width:641px) and (max-width:1199px){
  .blogs .blog_body{}
  .blog_body .school_box .left_side{float:left;width:30%;}
  .blog_body .school_box .right_side{float:left;width:65%;margin-left:3%;}
}
