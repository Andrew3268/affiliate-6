    <div class="edtor_detail clearfix">
      <div class="wrap">
      
        <div class="left lf_none">
          <div class="inner_wrap">
            <div class="inner">
              <strong>Featured.</strong>
              <p>Mar.</p>
              <em>2019.</em>
            </div>
          </div>
          
          <!-- <div class="inner_wrap2">
