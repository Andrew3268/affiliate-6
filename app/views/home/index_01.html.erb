          <div class="in_featured">
            <% @recommends.each do |recommend| %>
              <div class="inner_wrap2">
                <h2><%= link_to recommend.re_title, recommend %></h2>
                <p><%= link_to recommend.re_intro, recommend %></p>
              

                <div class="filter-node" data-filter='["<%= recommend.re_filter %>"]'>
                  <div class="inner">
                    <%= link_to (image_tag recommend.re_image), recommend %>
                  </div>
                  <% if can? :update, recommend %>
                    <div class="btn clearfix admin">
                      <em><%= link_to "Edit", edit_recommend_path(recommend) %></em><%= link_to "Delete", recommend_path(recommend), method: :delete, data: {confirm: "Are you sure?"}%>
                    </div>    
                  <% end %>
                </div>
              </div>
            <% end %>
          </div><!--in_featured-->
        </div><!--left-->
        
        <div class="card_wrap">

          <% @gadgets.each do |gadget| %>
            <div class="card">
              <em><%= gadget.gg_title %></em>
              <div class="mid_image">
                <a target="_blank" href="<%= gadget.gg_url %>"><img src="<%= gadget.gg_img %>" alt="<%= gadget.gg_title %>" /></a>
                <% if gadget.gg_youtube01.present? %>
                  <div class="js-overlay-start start" data-url= "<%= gadget.gg_youtube01 %>">
                    <button><img src="<%=asset_path 'youtube_02.png' %>" alt="" /></button>
                  </div>
                <% end %>
              </div>
              <p><%= gadget.gg_intro %></p>
              <div class="btn clearfix">
                <em>$<%= gadget.gg_aprice %></em><a target="_blank" href="<%= gadget.gg_url %>">Buy Now</a>
              </div>
              <% if can? :update, gadget %>
                <div class="btn clearfix admin">
                  <em><%= link_to "Edit", edit_gadget_path(gadget) %></em><%= link_to "Delete", gadget_path(gadget), method: :delete, data: {confirm: "Are you sure?"}%>
                </div>   
              <% end %>
            </div>
          <% end %>

