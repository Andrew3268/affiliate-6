   $(document).ready(function() {
    var $window = $(window);
      // Function to handle changes to style classes based on window width
      function checkWidth() {
      if ($window.width() < 980) {
          $('.sp_menu').removeClass('show-more-height')
          };

      if ($window.width() >= 980) {
          $('.sp_menu').addClass('show-more-height');
      }
    }
    // Execute on load
    checkWidth();
    // Bind event listener
        $(window).resize(checkWidth);
  });
