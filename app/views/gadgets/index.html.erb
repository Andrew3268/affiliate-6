                     <li> <%= "#{ gadget.unique_impression_count }" %> views</li>   
                    </ul>
                  </div>
                  <div class="main_button">
                    <div class="col-12">
                      <ul class="actions">
                        <li><a href="<%= gadget.gg_url %>" class="button">Check it Out</a></li>
                      </ul>
                    </div>
                  </div>
                </div>
              </section>
            </div>
          <% end %>

