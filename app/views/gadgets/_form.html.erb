     <%= f.input :gg_pro_09, label: 'Pro_09'%>
     <%= f.input :gg_pro_10, label: 'Pro_10'%>
    </div>
    <div class="cons">
     <%= f.input :gg_con_01, label: 'con_01' %>
     <%= f.input :gg_con_02, label: 'con_02' %>
     <%= f.input :gg_con_03, label: 'con_03' %>
     <%= f.input :gg_con_04, label: 'con_04' %>
     <%= f.input :gg_con_05, label: 'con_05'%>
     <%= f.input :gg_con_06, label: 'con_06' %>
     <%= f.input :gg_con_07, label: 'con_07' %>
    </div>
   </div>

   
   <div class="form_btn">
    <%= f.button :submit %>
   </div>
  <% end %>


 