<div class="bg_wrap clearfix">
  <h2><span>LATEST</span> GADGETS</h2>
  <% @gadgets.each do |gadget| %>
    <div class="gadget_blog clearfix">
      <a target="_blank" href="<%= gadget.gg_url %>"><img src="<%= gadget.gg_img %>" alt="<%= gadget.gg_title %>"></a>
    </div>
  <% end %>
</div>

<div class="bd_wrap clearfix">
  <div class="tab-menu-wrap">
    <div class="title-tab-menu">
      <h2><span>Trending</span> Deals</h2>
    </div>

    <div class="tab-menu-wp">
      <ul>
        <li>Promo Codes</li>
        <li>Deals</li>
        <li>Sales</li>
      </ul>
      <div class="clear"></div>
      
      <div class="page1"><!-- Codes -->
        <%= render 'blogs/side_codes' %>
      </div>

    
      <div class="page1"><!-- Deals -->
        <%= render 'blogs/side_deals' %>
      </div>
    

      <div class="page1"><!-- Sales -->
        <%= render 'blogs/side_sales' %>
      </div>
      
    </div>
  </div>
</div>

<div class="bf_wrap clearfix">
  <h2><span>LATEST</span> FEATURED</h2>
  <% @recommends.each do |recommend| %>
    <div class="inner clearfix">
      <%= link_to (image_tag recommend.re_image), recommend %>
      <em><%= recommend.re_filter %></em>
      <h3><%= link_to recommend.re_title, recommend %></h3>
    </div>
  <% end %>
</div>


<script>
 <%= render(:partial => 'blogs', :handlers => [:erb], :formats => [:js]) %>
</script>