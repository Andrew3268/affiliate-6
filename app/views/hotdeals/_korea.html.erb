        <% if @hotdeal.h_spare_02.present? %>
          <em><%= @hotdeal.h_spare_02 %></em>
        <% else %>
          <em>-</em>
        <% end %>
      </div>
    </div>
  <% end %>
  <% if @hotdeal.h_spare_02.present? || @hotdeal.h_spare_45.present? %>
    <div class="info_box">
      <span>
        <ul>
          <% if @hotdeal.h_spare_02.present? %>
            <li>Check coupon on detail page to receive your extra savings.</li>
          <% end %>
          <% if @hotdeal.h_spare_45.present? %>
            <li>Price dropped compare to last posted.</li>
          <% end %>
        </ul>
      </span>
    </div>
  <% end %>


