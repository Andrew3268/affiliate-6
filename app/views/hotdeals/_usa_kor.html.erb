            <%= number_to_currency(@hotdeal.h_spare_43) %>
          </span>
          <span class="span_02">
            ( <%= number_to_percentage(running_total, precision: 0) %> OFF )
          </span>
        </p>
      <% else %>
        <% if @hotdeal.h_spare_62.present? || @hotdeal.h_spare_44.present? %>
          <% running_total = 0 %>
          <% running_total =  (@hotdeal.h_spare_43 - @hotdeal.h_spare_44) / @hotdeal.h_spare_43 * 100 %>
          <% running_save = @hotdeal.h_spare_43 - @hotdeal.h_spare_44 %>

