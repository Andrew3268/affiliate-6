              <li>+ extra <%= number_to_percentage(@hotdeal.h_spare_61, precision: 0) %> off coupon</li>
            <% end %>
          <% else %>
            <% if @hotdeal.h_spare_62.present? %>
              <li>+ extra <%= number_to_currency(@hotdeal.h_spare_62) %> off coupon</li>
            <% end %>
          <% end %>
          
          <% if @hotdeal.h_spare_07.present? %>
            <li class="stocks">Only in a few stocks left.</li>
          <% end %>
        </ul>
      </div>
    <% else %>
      <% if @hotdeal.h_spare_61.present? %>
          <% coupon_p61 = 0 %>
          <% coupon_p61 = (@hotdeal.h_spare_43 * @hotdeal.h_spare_61 / 100) %>
          <% number_to_currency(coupon_p61) %>
          <p class="h_price">
              <% coupon_deal = 0 %>
              <% coupon_deal = (@hotdeal.h_spare_43.to_i - coupon_p61) %>
              <%= number_to_currency(coupon_deal) %>
            <span class="span_01">
              <%= number_to_currency(@hotdeal.h_spare_43) %>
            </span>
            
            <% if @hotdeal.h_spare_44.present? %>
            <% else %>
              <% if @hotdeal.h_spare_61.present? %>
                <span class="via_show">Save <%= number_to_percentage(@hotdeal.h_spare_61, precision: 0) %> off via coupon </span>
              <% end %>
            <% end %>
          </p>
        <% else %>
          <% if @hotdeal.h_spare_62.present? %>
            <% coupon_dollar = 0 %>
            <% coupon_dollar = @hotdeal.h_spare_43 - @hotdeal.h_spare_62 %>
            <p class="h_price">
                <%= number_to_currency(coupon_dollar) %>
              <span class="span_01">
                <%= number_to_currency(@hotdeal.h_spare_43) %>
              </span>
              <% if @hotdeal.h_spare_44.present? %>
              <% else %>
                <% if @hotdeal.h_spare_62.present? %>
                  <span class="via_show">Save <%= number_to_currency(@hotdeal.h_spare_62) %> off via coupon </span>
                <% end %>
              <% end %>
            </p>
          <% end %>
        <% end %>
        <% if @hotdeal.h_spare_07.present? %>
         <div class="add_line">
          <ul>
            <li class="stocks">Only in a few stocks left.</li>
          </ul>
         </div>
