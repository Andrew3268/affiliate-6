<!-- <p id="notice"><%= notice %></p> -->
<%= render 'shared/play_video' %><!-- for play youtube video-->
<div class="layout">
  <%= render 'shared/header_short' %>
  
  <div class="show_wrap clearfix">
    <div class="wrap">
    <%= render 'hotdeals/header' %>  
      <div class="show_box clearfix">
        
        <!-- <p>Location Map</p> -->
        <div class="show_img hotdeal_img">
          <% if @hotdeal.h_image.present? %>
            <a target="_blank" href="<%= @hotdeal.h_link %>"><img src="<%= @hotdeal.h_image %>" alt="<%= @hotdeal.h_title %>" title="<%= @hotdeal.h_spare_04 %>"></a>
          <% else %>
            <%= link_to (image_tag @hotdeal.himage.url(:small), alt: @hotdeal.h_title, title: @hotdeal.h_spare_04), @hotdeal %>
          <% end %>
          <div class="mark">
            <span>HOT</span><em>DEALS</em>
          </div>
           <% if can? :update, @hotdeal %>
            <div class="admin">
              <%= link_to 'Back', hotdeals_path %> |
              <%= link_to 'Edit', edit_hotdeal_path(@hotdeal) %> |
              <%= link_to 'Delete', @hotdeal, method: :delete, data: { confirm: 'Are you sure?' } %> |
              <%= @hotdeal.impressionist_count %> Views
            </div>
          <% end %>
        </div>
        <div class="show_inner">
         <div class="hotdeal_inner">
           <h2 class="title"><%= @hotdeal.h_title %></h2>

           <p class="h_price"><%= number_to_currency(@hotdeal.h_price) %> <span class="span_01"><%= number_to_currency(@hotdeal.h_list_price) %></span><span class="span_02">( <%= number_to_percentage(@hotdeal.h_percentage, precision: 0) %> OFF )</span></p>
           <div class="extra_info">
            <% if @hotdeal.h_spare_08.present? %>
             <span class="basic_info">
              <% if @hotdeal.h_spare_06.present? %>
                <%= @hotdeal.h_spare_06 %> |
              <% end %>
                Avg <%= @hotdeal.h_spare_08 %> / <%= number_with_delimiter(@hotdeal.h_spare_09) %>+ reviews 
              <% if @hotdeal.h_spare_07.present? %>
                | <%= @hotdeal.h_spare_07 %> 
              <% end %>
             </span> 
            <% end %>
             <em>+ FREE Shipping ( Free Shipping: <a target="_blank" href="/blogs/blog_01_amz_prime">Prime</a> or $25+ of all other eligible items. )</a></em>
             <% if @hotdeal.h_spare_01.present? %><em>+ <%= @hotdeal.h_spare_01 %>% Off Extra Deal</em><% end %>
             <% if @hotdeal.h_spare_02.present? %><em>+ <%= @hotdeal.h_spare_02 %> Off Coupon</em><% end %>
            </div>

           <div class="show_des"><p class="description"><%= @hotdeal.h_description %></p></div>
           
           <div class="btn">
            <a class="m_btn" target="_blank" href="<%= @hotdeal.h_link %>">Check it out on &ensp;<em>Amazon</em></a>
           </div>
          </div>
        </div>

        <% if can? :update, @hotdeal %>
          <div class="pinterest">
           <script async defer data-pin-hover="true" data-pin-tall="true" src="//assets.pinterest.com/js/pinit.js"></script>
          </div>
        <% end %>  

      </div>
      <div class="hotdeal_related">
        <p>Related Products on Amazon</p>
        <script type="text/javascript">
        amzn_assoc_placement = "adunit0";
        amzn_assoc_tracking_id = "3628-20";
        amzn_assoc_ad_mode = "search";
        amzn_assoc_ad_type = "smart";
        amzn_assoc_marketplace = "amazon";
        amzn_assoc_region = "US";
        amzn_assoc_default_search_phrase = "<%= @hotdeal.h_spare_04 %>";
        amzn_assoc_default_category = "All";
        amzn_assoc_linkid = "10a626d082cd5d1d67d4b8a2afc6ae3d";
        amzn_assoc_title = "Shop Related Products";
        amzn_assoc_search_bar = "false";
        </script>
        <script src="//z-na.amazon-adsystem.com/widgets/onejs?MarketPlace=US"></script>
      </div>

    </div>
    
  </div>
</div>