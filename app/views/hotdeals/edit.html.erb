<div class="wrap">  
<%= render 'shared/header_short' %>
  <div class="hotdeal_wrap">
    <h1>Editing Hotdeal</h1>
    <div class="hotdeal_form">
      <%= simple_form_for(@hotdeal) do |f| %>
        <%= f.error_notification %>
        <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

        <%= f.input :himage, label: 'Choose Image' %>
        <%= f.select :h_spare_03, ([["Do You Have A Banner?", ""], "YES"])%>
        <%= f.select :h_spare_06, ([["No PRIME?", ""], "Yes"])%>
        <%= f.select :h_spare_07, ([["In Stock", ""], "Only in a few stock left"])%>
        <%= f.select :h_spare_10, ([["Subscribe & Save?", ""], "Yes"])%>
        <%= f.select :h_spare_12, ([["No Tax?", ""], "Yes"])%>
        <%= f.select :h_spare_13, ([["Write Blog?", ""], "Yes"])%>
        <div class="form_btn"><%= f.button :submit %></div><br />
        <%= f.input :h_image, label: 'Image URL' %>
        <%= f.input :h_link, label: 'Product URL' %>
        <%= f.input :h_title , label: 'Title Of Product' %>
        <%= f.input :h_spare_04, label: 'Image_Title' %>
        <%= f.input :h_keyword, label: ' gadgets, amazon, recommended, under $ ' %>
        <%= f.input :h_spare_05, label: 'Hashtags' %>
        <%= f.input :h_spare_11, label: 'Korean Title' %>
        <div class="pricing clearfix">
          <%= f.input :h_spare_41, label: 'Original Price' %>
          <%= f.input :h_spare_42, label: 'Current Price' %>
          <%= f.input :h_percentage, label: 'Discount Percentage' %>
        </div>
        <p>(when we don't know sales of percentage)</p>
        <div class="pricing clearfix">
          <%= f.input :h_spare_43, label: 'Original Price' %>
          <%= f.input :h_spare_44, label: 'Current Price' %>
        </div>
        <div class="pricing clearfix">
          <%= f.input :h_spare_08, label: 'Average Rate' %>
          <%= f.input :h_spare_09, label: 'Number of Reviews' %>
          <%= f.input :h_spare_02, label: 'Coupon Deals?' %>
          <!-- <%= f.input :h_spare_01, label: 'Extra Deals?' %> -->
          <!--<%= f.input :h_list_price, label: '(Old)List Price' %>
          <%= f.input :h_price, label: '(Old)Current Price' %>-->
        </div>
        <div class="find_more">
          <%= f.input :h_spare_14, label: 'Amazon Choice' %>
          <%= f.input :h_spare_15, label: 'Amazon Choice Link' %>
        </div>
        <!-- <%= f.input :h_description, label: 'Description Of Product' %> -->
        <%= f.input :h_spare_21, as: :trix_editor, label: 'Description Of Product with TRIX' %>

        <div class="form_btn"><%= f.button :submit %></div>

      <% end %>
    </div>
    <%= link_to 'Show', @hotdeal %> |
    <%= link_to 'Back', hotdeals_path %>
  </div>
</div>