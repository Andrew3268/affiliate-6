<div class="hotdeal_inner">
 <h2><%= @promocode.p_title %> </h2>

 <% running_total = 0 %>
 <% running_total =  @promocode.p_spare_26 - (@promocode.p_spare_27 / 100) * @promocode.p_spare_26 %>
 <% running_save = @promocode.p_spare_26 - running_total %>
 <p class="h_price"><em>List Price:</em> <!-- <% number_to_currency(running_total) %> --> <span class="span_01"><%= number_to_currency(@promocode.p_spare_26) %></span><span class="span_02">( <%= number_to_percentage(@promocode.p_spare_27, precision: 0) %> OFF ) </span></p>
 <div class="add_line">
  <ul>
   <!--  <% if @promocode.p_spare_55.present? || @promocode.p_spare_56.present? %>
      <li>Take <%= number_to_percentage(@promocode.p_spare_27, precision: 0) %> at <%= number_to_currency(@promocode.p_spare_26) %> via code</li>
    <% else %>
      <li>Take <%= number_to_percentage(@promocode.p_spare_27, precision: 0) %> at <%= number_to_currency(@promocode.p_spare_26) %> via code and save <%= number_to_currency(running_save) %></li>
    <% end %> -->
    
    <% if @promocode.p_spare_55.present? || @promocode.p_spare_56.present? %>
      <% if @promocode.p_spare_55.present? %>
        <li>+ extra <%= number_to_percentage(@promocode.p_spare_55, precision: 0) %> off coupon</li>
      <% else %>
        <li>+ extra <%= number_to_currency(@promocode.p_spare_56) %> off coupon</li>
      <% end %>
    <% end %>
    
    <% if @promocode.p_spare_02.present? %>
      <li class="stocks">Only in a few stocks left.</li>
    <% end %>
  </ul>
 </div>


 <div class="info_wrap clearfix">

    <div class="block clearfix">
      <div class="box line_three">
        <p>Shipping</p>
        <em>Free</em>
      </div>
      <div class="box line_three">
        <p>Star Ratings</p>
        <% if @promocode.p_spare_03.present? %>
          <em>Avg. <%= @promocode.p_spare_03 %> / 5.0</em>
        <% else %>
          <em>-</em>
        <% end %>
      </div>
      <div class="box line_three">
        <p>Customer Ratings</p>
        <% if @promocode.p_spare_04.present? %>
          <em><%= number_with_delimiter(@promocode.p_spare_04) %>+</em>
        <% else %>
          <em>-</em>
        <% end %>
      </div>
    </div>

    <div class="block clearfix">
  
        <% if @promocode.p_spare_07.present? %>
          <div class="box">
           <p>Search more by Keyword</p>
           <em><a class="keyword" href="<%= @promocode.p_spare_08 %>"><%= @promocode.p_spare_07 %></a><i></i></em>
          </div>
        <% end %>
      </div>

      <% coupon_55 = 0 %>
      <% coupon_55 = running_total * @promocode.p_spare_55.to_i / 100 %>
      <% number_to_currency(coupon_55) %>

      <div class="block clearfix">
        <% if @promocode.p_spare_55.present? || @promocode.p_spare_56.present? %>
          
          <div class="box total_box">
            <p>Estimated price when coupon is applied</p>
            <% if @promocode.p_spare_55.present? %>
              <% estimated_us = 0 %>
              <% estimated_us = running_total - coupon_55%>
              <em class="total_p"><%= number_to_currency(estimated_us) %></em>
              <% you_save = @promocode.p_spare_26.to_f - estimated_us %>
              <p class="you-save">You've saved <%= number_to_currency(you_save) %></p>
            <% else %>
              <% estimated_us = 0 %>
              <% estimated_us = running_total - @promocode.p_spare_56 %>
              <em class="total_p"><%= number_to_currency(estimated_us) %></em>
              <% you_save = @promocode.p_spare_26.to_f - estimated_us.to_f %>
              <p class="you-save">You've saved <%= number_to_currency(you_save) %></p>
            <% end %>
          </div>
        
        <% else %>
          <div class="box total_box">
            <p>Estimated Purchase Price</p>
            <% you_save = @promocode.p_spare_26.to_f - running_total.to_f %>
            <em class="total_p"><%= number_to_currency(running_total) %></em>
            <p class="you-save">You've saved <%= number_to_currency(you_save) %></p>
          </div>
        <% end %>
      </div>
     
      <div class="info_box">
        <span>
          <ul>
           <% if @promocode.p_spare_55.present? || @promocode.p_spare_56.present? %>
            <li>"Estimated Purchase Price" is for reference only. Please fully check the product detail on Amazon before purchasing.</li>
           <% end %>
           <% if @promocode.p_spare_26 < 25.00 %>         
            <li>Get free shipping when you order $25+ of eligible items or Amazon Prime Members. <a target="_blank" href="/blogs/blog_01_amz_prime">What's Prime.<i></i></a></li>
            <% end %>
            <li>Average ratings and reviews may change after posting.</li>
          </ul>
        </span>
      </div>
  </div><!--./info_wrap-->
 
  <div class="extra_info"></div><!--./extra_info-->

  <div class="code_btn">
     <!-- <p class="code_line">Click and copy this code then apply it at your checkout</p> -->
     <div class="text_copied intheshow">
      <div class="container_copy"><div class="wrap"><div class="box"><p data-copy-text=""><%= @promocode.p_promocode %></p></div></div></div>
     </div>

     <div class="pc_btn">
       <div class="only_show promocode_btn">
        <a class="m_btn p_btn" target="_blank" href="<%= @promocode.p_link %>">Check it out on &ensp;<em>Amazon</em></a>
       </div> 
     </div>
     <div class="mobile_btn">
       <div class="only_show promocode_btn">
        <a class="m_btn p_btn" href="<%= @promocode.p_link %>">Check it out on &ensp;<em>Amazon</em></a>
       </div> 
     </div>
  </div>
  
  <% if @promocode.p_spare_36.present? %>
    <div class="trix trix-container gradient"><span>About the product</span><p><%= @promocode.p_spare_36.html_safe %></p><button class="show-btn fa fa-chevron-down"></button></div>
  <% else %>
    <% if @promocode.p_description.present? %>
      <div class="show_des"><p class="description"><%= @promocode.p_description %></p></div>
    <% end %>
  <% end %>
  
</div><!--./hotdeal_inner-->