<!-- <p id="notice"><%= notice %></p> -->
<%= render 'shared/play_video' %><!-- for play youtube video-->

<div class="layout"><!--layout-->
  <div class="wrap">  
    <%= render 'shared/header_short' %>
    <div class="dealpage_title">
      <% if params[:name].present? %>
        <p>#<%= params[:name] %></p>
      <% end %>
    </div>
    <%= render 'hotdeals/header' %>  

    <% @promocodes.each do |promocode| %>
      <figure class="deals_card">
        <% if promocode.p_image.present? %>
          <div class="image_box">
            <% if promocode.p_image.present? %>
              <%= link_to image_tag(promocode.p_image), promocode %>
            <% else %>
              <%= link_to (image_tag promocode.pimage.url(:small), alt: promocode.p_title, title: promocode.p_image_title), promocode %>
            <% end %>
            <div class="mark"><span><%= number_to_percentage(promocode.p_spare_27, precision: 0) %></span><em>OFF</em></div>
          </div>
        <% else %>
          <div class="image_box"><%= link_to (image_tag promocode.pimage.url(:small), alt: promocode.p_title, title: promocode.p_image_title), promocode %></div>
        <% end %>
        <div class="buy-now"><span><a target="_blank" href="<%= promocode.p_link %>">BUY NOW</a></span></div>
        <figcaption>
          <h3><%= render_with_phashtags(promocode.p_hashtag.to_s) %></h3>
          <p><%= link_to promocode.p_title, promocode %></p>
          <div class="price">
            <em>$<%= promocode.p_list_price %></em>$<%= promocode.p_price %>
          </div>
          <div class="m_btn"><a href="<%= promocode.p_link %>">Buy Now</a></div>
        </figcaption>
      </figure>
    <% end %> 

 </div><!--./warp-->
</div><!--./layout-->
