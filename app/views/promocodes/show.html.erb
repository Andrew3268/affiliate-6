<!-- <p id="notice"><%= notice %></p> -->
<%= render 'shared/play_video' %><!-- for play youtube video-->
<div class="layout">
  <%= render 'shared/header_short' %>
  
  <div class="show_wrap clearfix">
    <div class="wrap">
    <%= render 'promocodes/header' %>  
    
      <div class="show_box clearfix">
        
        <!-- <p>Location Map</p> -->
        <div class="show_img hotdeal_img">
          <div class="img_box">
            <% if @promocode.p_image.present? %>
             <a target="_blank" href="<%= @promocode.p_link %>"><img src="<%= @promocode.p_image %>" alt="<%= @promocode.p_title %>" title="<%= @promocode.p_image_title %>"></a>
            <% else %>
             <%= link_to (image_tag @promocode.pimage.url(:small), alt: @promocode.p_title, title: @promocode.p_image_title), @promocode %>
            <% end %>
          </div>
          <div class="mark"><span>HOT</span><em>DEALS</em></div>
           <% if can? :update, @promocode %>
            <div class="admin">
              <p>Admin Management</p>
              <%= link_to 'Back', promocodes_path %> |
              <%= link_to 'Edit', edit_promocode_path(@promocode) %> |
              <%= link_to 'Delete', @promocode, method: :delete, data: { confirm: 'Are you sure?' } %> |
              <%= render 'promocodes/body_sns' %><br>
              <%= @promocode.impressionist_count(:filter=>:all) %> Views |
              <%= @promocode.created_at.strftime("%d. %B.") %><br>
              <%= @promocode.p_title %>
              <% running_total = 0 %>
              <% running_total =  @promocode.p_spare_26 - (@promocode.p_spare_27 / 100) * @promocode.p_spare_26 %>
              <p class="h_price"><%= number_to_currency(running_total) %> <span class="span_01">( Was: <%= number_to_currency(@promocode.p_spare_26) %></span><span class="span_02"> | <%= number_to_percentage(@promocode.p_spare_27, precision: 0) %> OFF with Code: <%= @promocode.p_promocode %> )</span></p>
            </div>
          <% end %>
        </div>

        <div class="show_inner">
         <div class="hotdeal_inner">
           <h2><%= @promocode.p_title %></h2>

           <% running_total = 0 %>
           <% running_total =  @promocode.p_spare_26 - (@promocode.p_spare_27 / 100) * @promocode.p_spare_26 %>
           <p class="h_price"><%= number_to_currency(running_total) %> <span class="span_01"><%= number_to_currency(@promocode.p_spare_26) %></span><span class="span_02">( <%= number_to_percentage(@promocode.p_spare_27, precision: 0) %> OFF )</span></p>
           
           <div class="extra_info">
            <!-- <em>Amazon is offering <span class="oneline"><%= @promocode.p_title %></span> for only <%= number_to_currency(@promocode.p_spare_26) %> when you use coupon code <%= @promocode.p_promocode %> at checkout. Shipping is free on this order.</em> -->
            <% if @promocode.p_spare_03.present? %>
             <span class="basic_info">
              <% if @promocode.p_spare_01.present? %>
                <div class="primeornot"><%= @promocode.p_spare_01 %> |</div>
              <% else %>
                <!-- PRIME | -->
              <% end %>
                Avg <%= @promocode.p_spare_03 %> | <%= number_with_delimiter(@promocode.p_spare_04) %>+ reviews 
              <% if @promocode.p_spare_02.present? %>
                | <%= @promocode.p_spare_02 %> 
              <% end %>
             </span> 
            <% end %>
            <% saving_total = 0 %>
            <% saving_total =  @promocode.p_spare_26 - (@promocode.p_spare_26 - (@promocode.p_spare_27 / 100) * @promocode.p_spare_26) %>
            <em class="save_money">* Save <%= number_to_currency(saving_total) %> or more.</em>
            <em>* Pricing may change and deals can expire fast.</em>
            <em>+ FREE Shipping ( Free Shipping: <a class="prime" href="/blogs/blog_01_amz_prime">Prime</a> or $25+ of all other eligible items. )</a></em>

            <% if @promocode.p_spare_05.present? %>
              <% @promocode.p_spare_05 %>
              <em>+ Check via Subscribe & Save ( Save 5% Off now and up to 15% Off on auto-deliveries <span><a href="https://amzn.to/2BzWhT4" target="_blank">Learn more</a></span> )</em>
            <% end %>
            
            <% if @promocode.p_extra_deal.present? %><em class="extra_dh">+ <%= @promocode.p_extra_deal %>% Off Extra Deal</em><% end %>
            <% if @promocode.p_coupon_deal.present? %><em class="extra_dh">+ <%= @promocode.p_coupon_deal %> Off Coupon</em><% end %>

            <% if @promocode.p_spare_50.present? %>
              <% if @promocode.p_spare_50 < DateTime.now %>
              <% @promocode.p_spare_50 %>
                <em class="expired">* This promo code has EXPIRED.</em>
              <% else %>

                <% if @promocode.p_spare_51.present? %>
                 <% if @promocode.p_spare_51 <= DateTime.now %>
                 <% @promocode.p_spare_51 %>
                  <em class="endtoday">* This Promo Code expires today.</em> 
                 <% else %>
                  <em>* Code End Date: <%= @promocode.p_end_date %> or while supplies last.</em>
                 <% end %> 
                <% end %>

              <% end %>
             <!-- </div> -->
            <% else %>
              <em>* Code End Date: <%= @promocode.p_end_date %> or while supplies last.</em>
            <% end %>
           </div><!--./extra_info-->

            <!-- <p class="code_line">Click and copy this code then apply it at your checkout</p> -->
            <div class="text_copied intheshow">
              <div class="container"><div class="wrap"><div class="box"><p data-copy-text=""><%= @promocode.p_promocode %></p></div></div></div>
            </div>

           <div class="only_show">
            <a class="m_btn p_btn" target="_blank" href="<%= @promocode.p_link %>">Check it out on &ensp;<em>Amazon</em></a>
           </div> 

            <% if @promocode.p_spare_36.present? %>
              <div class="trix trix-container gradient"><span>Features</span><p><%= @promocode.p_spare_36.html_safe %></p><button class="show-btn fa fa-chevron-down"></button></div>
            <% else %>
              <% if @promocode.p_description.present? %>
                <div class="show_des"><p class="description"><%= @promocode.p_description %></p></div>
              <% end %>
            <% end %>
            
          </div>
        </div>

        <% if can? :update, @promocode %>
          <div class="pinterest">
           <script async defer data-pin-hover="true" data-pin-tall="true" src="//assets.pinterest.com/js/pinit.js"></script>
          </div>
        <% end %>  

      </div><!--./show_box-->
      
      <div class="hotdeal_related">
        <p>Related Products on Amazon</p>
        <script type="text/javascript">
        amzn_assoc_placement = "adunit0";
        amzn_assoc_tracking_id = "3628-20";
        amzn_assoc_ad_mode = "search";
        amzn_assoc_ad_type = "smart";
        amzn_assoc_marketplace = "amazon";
        amzn_assoc_region = "US";
        amzn_assoc_default_search_phrase = "<%= @promocode.p_image_title %>";
        amzn_assoc_default_category = "All";
        amzn_assoc_linkid = "10a626d082cd5d1d67d4b8a2afc6ae3d";
        amzn_assoc_title = "Shop Related Products";
        amzn_assoc_search_bar = "false";
        </script>
        <script src="//z-na.amazon-adsystem.com/widgets/onejs?MarketPlace=US"></script>
      </div>

    </div><!--./wrap-->
  </div><!--./show_wrap-->
</div><!--./layout-->
<script><%= render(:partial => 'promocode', :handlers => [:erb], :formats => [:js]) %></script>