  <%= render 'deals/set_promotion' %>
</div>

<div class="set_search_box">
  <h2>Amazon Deal Finder</h2>

  <button class="accordion">See All Categories</button>
  <%= render 'deals/set_category' %>


  <div class="feild_wrap">
    <div class="field ">
      <span class="label">Search Keyword</span>
      <input type="text" class="keyword" placeholder="Search Keyword" value="">
    </div>

    <div class="field time">
      <span class="label">Search Option</span>
      <select name="time">
        <option value="">Select</option>
        <option value="custom">Set Discount Range</option>
        <!-- <option value="stories-live">Just now (live)</option>
        <option value="today/date/stories">Today</option>
        <option value="yesterday/date/stories">Yesterday</option>
